<div class="container d-flex justify-content-center">
    <div class="col-md-7">
    <br>
    <center> <h3> <strong>Expense Tracker</strong></h3></center>
        <br />
        <form action="/" method="post">
            <div class="form-group">
                <label for="description">Description:</label>
                <input type="text" class="form-control" id="description" name="description" placeholder="What is the expense..." required />
            </div>
            
            <div style="margin-top: 0.8rem;" class="form-group">
                <label for="amount">Amount:</label>
                <input type="text" class="form-control" id="amount" name="amount" placeholder="How much it costs..." required />
            </div>
            <br>
            <div class="form-group">
                <label>Choose Category:</label>
                <div class="row" >
                    {{#each categories}}
                        <div  style="margin-top:1rem" class="col-3 form-check">
                            <label class="form-check-label" for="{{this.id}}">{{this.category_type}}</label>
                            <input type="radio" class="form-check-input" id="{{this.id}}" name="categoryId" value="{{this.id}}" />
                        </div>
                    {{/each}}
                </div>
            </div>

            <button style="margin-top: 0.8rem;" type="submit" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z"/>
                </svg>&nbsp;
                Add Expense
            </button>
        </form>
        <hr />

        <h5>Total expenses
            <span style="font-weight: 400;color:gray;margin-left:1.5rem;font-size:1.1rem">R {{totalExpenses}} </span>
        </h5>
        <h5>Expense summery per Category</h5>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Category</th>
                    <th scope="col">Totals</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each categoryTotals}}
                    <tr>
                        <td>{{this.category_type}} </td>
                        <td>R {{this.total_amount}}</td>
                        <td><a href="/expenses/{{this.category_id}}">view expenses for {{this.category_type}}</a></td>
                    </tr>
                {{/each}}

            </tbody>
        </table>

        <a href="/expenses" class="btn btn-primary" > View Expenses</a>

        <br>
        <br>

    </div>
</div>